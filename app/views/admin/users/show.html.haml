.admin_panel_header
	%h1
		= link_to 'All Users', admin_users_path 
		|
		= link_to 'Edit User', edit_admin_user_path(user) 
		|
		Profile Details
.admin_panel_inner
	%table{ cellpadding: '0', cellspacing: '0', width: '96%' }
		%tbody
			%tr{width: '100%' }
				= render :partial => '/shared/user_details', locals: {user: user, address: address}
			%tr{width: '100%' }
				%td
					.span3{style: "width: 100%;"}
						.admin_panel_inner
							.row-fluid
								%b Updated By:
								= user.updated_by.name rescue ''
							.row-fluid
								%b Confirmation Sent On:
								= user.confirmation_sent_at.strftime("%b %d, %Y %H:%M:%S") rescue ''
							.row-fluid
								%b Confirmed:
								= user.confirmed_at.strftime("%b %d, %Y %H:%M:%S") rescue ''
							.row-fluid
								%b Role:
								= user.role.name