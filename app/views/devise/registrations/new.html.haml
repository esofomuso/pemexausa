#content.rc5
	.simple-text
		%h1 Sign Up
		= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
			= devise_error_messages! 
			= f.hidden_field :role_id, value: Role.regular_user.id
			%table{ cellpadding: '0', cellspacing: '0', width: '100%' }
				%tbody
					%tr{width: '100%' }
						= render :partial => '/shared/user_form', :locals => { :f => f, user: resource, address: Address.new, all_chapters: Chapter.active, countries: Country.all, states: State.all }
					%tr{width: '100%' }
						%td
							.span3
						%td
							.span3
						%td
							.span3
								.admin_panel_inner
									.row-fluid
										= f.label 'password', 'Password (min. 6 characters)*', class: "control-label", required: true
										= f.password_field :password, tabindex: 20, class: 'span12', minlength: 6, maxlength: 128, required: true
									.row-fluid
										= f.label 'password_confirmation', 'Password Confirmation*', class: "control-label", required: true
										= f.password_field :password_confirmation, tabindex: 21, class: 'span12', minlength: 6, maxlength: 128, required: true
							.span3
								.row-fluid
									.buttonBar
										= f.submit "Save", class: "btn btn-primary", tabindex: 22
										= link_to 'Cancel', :back, :class => "btn btn-primary", tabindex: 23
%br
= render "devise/shared/links" 
