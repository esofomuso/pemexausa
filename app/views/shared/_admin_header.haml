#header
	Logged in as: 
	= link_to current_user.name, admin_user_path(current_user)
	= link_to 'logout', logout_path
	.time-auth-search
		.left-tas.fleft
			.pss-time.fleft
				- Time.use_zone("West Central Africa") do |z|
					= Time.zone.now.strftime('%I:%M %p %Z')
				,
				%b PSS
			.usa-time.fleft
				= Time.now.strftime('%I:%M %p %Z')
				,
				%b USA
				.clear
				.fleft
			.clear
		.clear
	.admin_top-menu
		%table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
			%tr
				%td{:width => "117"}
					= link_to 'Home', '/', class: "#{ 'selected' if request.path == '/'}"
				%td
					= link_to 'users', '/admin/users/', class: "#{ 'selected' if controller.controller_name == 'users'}"
				%td
					= link_to 'members', '/admin/members/', class: "#{ 'selected' if controller.controller_name == 'members'}"
				%td
					= link_to 'chapters', '/admin/chapters/', class: "#{ 'selected' if controller.controller_name == 'chapters'}"
				%td
					= link_to 'projects', '/admin/projects/', class: "#{ 'selected' if controller.controller_name == 'projects'}"
				%td
					= link_to 'payment purposes', '/admin/payment_purposes/', class: "#{ 'selected' if controller.controller_name == 'payment_purposes'}"
				%td
					= link_to 'payments', '/admin/payments/', class: "#{ 'selected' if controller.controller_name == 'payments'}"
				%td
					= link_to 'photos', '/admin/photos/', class: "#{ 'selected' if controller.controller_name == 'photos'}"
				%td
					= link_to 'countries', '/admin/countries/', class: "#{ 'selected' if controller.controller_name == 'countries'}"
				%td
					= link_to 'profile', '/profile', class: "#{ 'selected' if request.path == '/profile'}"
				%td{:width => "105"}
					= link_to 'convention events', '/admin/convention_events/', class: "last #{ 'selected' if controller.controller_name == 'convention_events'}"
					
