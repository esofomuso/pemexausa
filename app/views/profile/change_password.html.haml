#content.rc5{style: "width: 972px; padding: 15px;"}
	.simple-text
		%h1
			= link_to 'Profile Details', profile_path 
			|
			= link_to 'Edit Profile Details', edit_profile_path 
			|
			Change Password
		= form_for(user, url: update_profile_path, html: { method: :put }) do |f|
			%fieldset
				- unless current_user.errors.blank?
					%p
						.alert-error
							= render 'shared/form_errors', :errors => current_user.errors
				.span3
					.row-fluid
						= f.label 'password', 'Password (min. 6 characters)*', class: "control-label", required: true
						= f.password_field :password, tabindex: 20, class: 'span12', minlength: 6, maxlength: 128, required: true
					.row-fluid
						= f.label 'password_confirmation', 'Password Confirmation*', class: "control-label", required: true
						= f.password_field :password_confirmation, tabindex: 21, class: 'span12', minlength: 6, maxlength: 128, required: true
					.row-fluid
						.buttonBar
							= f.submit "Update", class: "btn btn-primary", tabindex: 22
							= link_to 'Cancel', :back, :class => "btn btn-primary", tabindex: 23
